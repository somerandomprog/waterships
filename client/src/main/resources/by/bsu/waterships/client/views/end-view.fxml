            <ImageView fx:id="stickman" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../textures/end/loser_3.png" />
               </image>
               <effect>
                  <Blend mode="SRC_ATOP">
                     <topInput>
                        <ColorInput height="600" paint="#234bb4" width="600" />
                     </topInput>
                  </Blend>
               </effect>
            </ImageView>
         </children>
      </StackPane>
      <VBox alignment="CENTER" layoutX="595.0" layoutY="208.0" prefWidth="550.0" spacing="15.0">
         <children>
            <Label fx:id="label" alignment="CENTER" prefWidth="550.0" rotate="1.0" text="вы проиграли!" textAlignment="CENTER" textFill="#234bb4">
               <font>
                  <Font name="Bristol" size="96.0" />
               </font>
            </Label>
            <Button id="back" mnemonicParsing="false" onAction="#onBackPressed" prefHeight="125.0" prefWidth="250.0" rotate="-2.0" />
         </children>
      </VBox>
   </children>
   <stylesheets>
      <URL value="@../stylesheets/global.css" />
